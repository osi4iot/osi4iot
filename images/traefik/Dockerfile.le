FROM traefik:v2.7
COPY entry_script.sh /src/scripts/entry_script.sh
RUN chmod +x /src/scripts/entry_script.sh
HEALTHCHECK --interval=10s --timeout=1s --retries=3 \
    CMD wget --quiet --tries=1 --spider --no-check-certificate http://127.0.0.1:8080/ping || exit 1
ENTRYPOINT ["/src/scripts/entry_script.sh"]